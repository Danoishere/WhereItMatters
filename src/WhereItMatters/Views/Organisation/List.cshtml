@model IEnumerable<Organisation>

<h1>Organisations</h1>
<p>Here you can find all organisations we are working with.</p>

@foreach (var organisation in Model)
{
    <div class="thumbnail">
        <div class="row">
            <div class="col-sm-3">

            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12"><h3>@organisation.Name</h3></div>
                </div>
                <div class="row">
                    <div class="col-sm-12"><p>@organisation.Description</p></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">Contact: <a href="mailto:@organisation.Mail">@organisation.Mail</a> </div>
                </div>
            </div>
        </div>
    </div>
    <br/>
}