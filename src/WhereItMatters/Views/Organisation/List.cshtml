@model IEnumerable<Organisation>
@{
    ViewData["Title"] = "List NGOs";
}
<h1>Organisations</h1>
<p>Here you can find all organisations we are working with.</p>

@foreach (var organisation in Model)
{
    <a class="thumbnail" asp-action="Detail" asp-controller="Organisation" asp-route-organisationId="@organisation.Id">
        <div class="row">
            <div class="col-sm-3">

            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-12"><h3>@organisation.Name</h3></div>
                </div>
                <div class="row">
                    <div class="col-sm-12"><p>@organisation.Description.TruncateLongString(350)</p></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">Contact: @organisation.Mail </div>
                </div>
            </div>
        </div>
    </a>
    <br/>
}