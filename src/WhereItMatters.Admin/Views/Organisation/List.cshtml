@model IEnumerable<Organisation>
<br/>

<div class="row">
    <div class="col-sm-2 back-button-container">
        <a asp-action="Index" asp-controller="Home" class="back-button">
            <span class="fa fa-arrow-circle-o-left"></span> Back
        </a>
    </div>
    <div class="col-sm-9">
        <h1>Organisations</h1>
    </div>
</div>
<div class="seperator"></div>
<br/>

<a class="btn btn-info pull-right" asp-action="Edit" asp-route-organisationId="0">New organisation</a>
<br/>
<br/>
<table class="table table-responsive table-hover">

    
        @foreach (var organisation in Model)
        {
            <tr>
                <td>
                    <a asp-action="Detail" asp-controller="Organisation" asp-route-organisationId="@organisation.Id">
                        @organisation.Name
                    </a>
                </td>
                <td>
                    <a asp-action="Detail" asp-controller="Organisation" asp-route-organisationId="@organisation.Id">
                        @organisation.Mail
                    </a>
                </td>
                <td>
                    <a asp-action="Detail" asp-controller="Organisation" asp-route-organisationId="@organisation.Id">
                        @organisation.IsActive
                    </a>
                </td>
            </tr>
        }
    

    </table>