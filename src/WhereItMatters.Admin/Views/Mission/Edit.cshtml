@model Mission
@{
    ViewData["Title"] = "Edit Mission";
}

<h1>Edit Organisation</h1>
<form asp-action="Edit" asp-controller="Mission" asp-route-missionId="@Model.Id">
    <div class="row">
        <div class="col-sm-3">
            <label asp-for="Name"></label>
        </div>
        <div class="col-sm-9">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label asp-for="Comment"></label>
        </div>
        <div class="col-sm-9">
            <textarea rows="5" asp-for="Comment" class="form-control"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label asp-for="IsActive"></label>
        </div>
        <div class="col-sm-9">
            <input type="checkbox" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label asp-for="Latitude"></label>
        </div>
        <div class="col-sm-9">
            <input asp-for="Latitude" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <label asp-for="Latitude"></label>
        </div>
        <div class="col-sm-9">
            <input asp-for="Longitude" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-9">
            <input class="btn btn-info" type="submit" value="Save" />
        </div>
    </div>
</form>
