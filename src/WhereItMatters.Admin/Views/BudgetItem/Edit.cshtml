@model IEnumerable<BudgetItem>
<div class="row">
    <div class="col-sm-3 back-button-container">
        <a asp-action="Edit" asp-controller="DonationRequest" asp-route-requestId="@ViewData["DonationRequestId"]" class="back-button">
            <span class="fa fa-arrow-circle-o-left"></span> Back
        </a>
    </div>
    <div class="col-sm-9">
        <h2>Edit Budget Items</h2>
    </div>
</div>
<br/>
<h3>Add new budget item</h3>
<br/>
<form asp-action="Save" asp-controller="BudgetItem">
    <input type="hidden" name="donationrequestid" value="@ViewData["DonationRequestId"]" />
    <div class="row">
        <div class="col-sm-3">
            <label>Description</label>
        </div>
        <div class="col-sm-9">
            <input name="description" type="text" class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <label>Price in USD</label>
        </div>
        <div class="col-sm-9">
            <input name="price" type="number" step="0.01" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <input type="submit" class="btn btn-success pull-right" value="Add" />
        </div>
    </div>
</form>
<br />
<h3>Edit existing budget items</h3>
<br/>
@foreach (var budgetItem in Model)
{
    <form asp-action="Save" asp-controller="BudgetItem">
        <input type="hidden" name="id" value="@budgetItem.Id" />
        <input type="hidden" name="donationrequestid" value="@ViewData["DonationRequestId"]" />
        <div class="row">
            <div class="col-sm-3">
                <label>Description</label>
            </div>
            <div class="col-sm-9">
                <input name="description" type="text" value="@budgetItem.Description" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-3">
                <label>Price</label>
            </div>
            <div class="col-sm-9">
                <input name="price" type="number" value="@budgetItem.Price" step="0.01" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-12">
                <span class="pull-right">
                    <input type="submit" class="btn btn-success" value="Save" />
                    <a asp-action="Delete" asp-controller="BudgetItem" asp-route-budgetItemId="@budgetItem.Id" class="btn btn-danger">Delete</a>
                </span>
            </div>
        </div>
    </form>
    <div class="seperator"></div>
    <br />
}
